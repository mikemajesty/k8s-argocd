{
    "terminal.integrated.profiles.osx": {
        "kind-terminal": {
            "path": "zsh",
            "args": ["-c", "export KUBECONFIG=~/.kube/config-kind && export PATH=\"$PWD/cluster/kind/bin:$PATH\" && zsh"],
            "icon": "terminal-bash"
        },
        "helm-terminal": {
            "path": "zsh",
            "args": ["-c", "export PATH=\"$PWD/helm-charts/bin:$PATH\" && zsh"],
            "icon": "terminal-bash"
        }
    },
    "terminal.integrated.defaultProfile.osx": "helm-terminal"
}